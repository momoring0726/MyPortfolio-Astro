---
// src/components/Hero.astro
---

<section
  id="hero"
  class="relative flex min-h-screen items-center justify-center overflow-hidden text-center text-cream animate-gradient bg-gradient-to-br from-nightSky via-deepTeal to-nightSky"
>
  <div class="container z-10">
    <div class="row">
      <div class="col-12">
        <h1
          class="fade-in text-5xl font-bold text-cream opacity-0 translate-y-8 transition-all duration-700 ease-out md:text-7xl"
        >
          Hi, I'm <span class="text-orange">Mark</span>
        </h1>
        <p
          class="fade-in mx-auto my-6 max-w-2xl text-xl text-cream/90 opacity-0 translate-y-8 transition-all duration-700 ease-out [transition-delay:150ms] md:text-2xl"
        >
          I build clean, minimal, and professional websites.
        </p>
        <a
          href="#projects"
          class="fade-in inline-block rounded-full bg-gradient-to-r from-orange to-rust px-10 py-4 text-lg font-semibold text-cream opacity-0 translate-y-8 transition-all duration-700 ease-out hover:scale-105 hover:shadow-2xl hover:shadow-orange/30 focus:outline-none focus:ring-2 focus:ring-orange/50 [transition-delay:300ms]"
        >
          View My Work
        </a>
      </div>
    </div>
  </div>
</section>
