---
// src/components/Projects.astro
import { projectsData } from "../data/projects.ts";
---

<section id="projects" class="bg-gradient-to-r from-nightSky to-deepTeal py-24">
  <div
    class="fade-in container mx-auto max-w-6xl px-4 opacity-0 transition-all duration-700 ease-out translate-y-8"
  >
    <h2
      class="relative z-0 mb-10 inline-block text-center text-4xl font-bold text-cream"
    >
      <span class="relative z-10">Projects</span>
      <span
        class="absolute -bottom-1 left-0 z-0 h-4 w-full -skew-x-12 bg-orange/50"
      ></span>
    </h2>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        projectsData.map((project) => (
          <div class="group relative rounded-xl shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
            <div class="relative aspect-[4/3] overflow-hidden rounded-xl bg-nightSky">
              <img
                src={project.image}
                alt={project.title}
                class="h-full w-full object-cover transition-all duration-500 ease-out group-hover:scale-105 group-hover:blur-sm group-hover:brightness-60"
              />

              <div class="absolute inset-0 flex items-center justify-center p-6 text-center opacity-0 transition-opacity duration-500 group-hover:opacity-100">
                <div class="opacity-0 transition-all duration-500 ease-out delay-100 group-hover:opacity-100 group-hover:translate-y-0 translate-y-4">
                  <h3 class="mb-2 text-2xl font-semibold text-cream">
                    {project.title}
                  </h3>
                  <p class="mb-4 text-cream/90">{project.description}</p>
                  <a
                    href={project.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-block rounded-full bg-gradient-to-r from-orange to-rust px-6 py-2 font-semibold text-cream shadow-lg transition-all hover:scale-105 hover:shadow-orange/30"
                  >
                    View Project
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
